record(ao, "$(P)Value") {
    field(DESC, "Tutorial!")
    field(VAL, 0.0)
}

record(ao, "$(P)TweakVal") {
    field(VAL, 1.0)
}

record(calcout, "$(P)TweakFwd") {
    field(INPA, "$(P)Value.VAL")
    field(INPB, "$(P)TweakVal.VAL")
    field(CALC, "A + B")
    field(OUT, "$(P)Value.VAL PP")
}

record(calcout, "$(P)TweakRev") {
    field(INPA, "$(P)Value.VAL")
    field(INPB, "$(P)TweakVal.VAL")
    field(CALC, "A - B")
    field(OUT, "$(P)Value.VAL PP")
}
